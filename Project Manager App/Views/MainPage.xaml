<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_Manager_App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_Manager_App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid VerticalAlignment="Top" Margin="32,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1">
            <TextBlock Text="Welcome to your Project Manager!" Style="{StaticResource PageTitleStyle}" Margin="{StaticResource SmallTopMargin}"/>
        </Grid>
        
        <Grid Grid.Row="2">
            <TextBlock Text="Click on a project to start writing down your ideas! " Style="{StaticResource BodyTextStyle}" Margin="{StaticResource LargeTopMargin}"/>
        </Grid>
     </Grid>
</Page>
